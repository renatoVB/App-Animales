<h1>Animales de granja </h1>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Fecha nac</th>
      <th>Sexo</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.codigo %></td>
        <td><%= animal.fecha_nac %></td>
        <td><%= animal.sexo %></td>
        <td><%= animal.descripcion %></td>
        <td><%= link_to 'Mostrar', animal %></td>
        <td><%= link_to 'Editar', edit_animal_path(animal) %></td>
        <td><%= link_to 'Borrar', animal, method: :delete, data: { confirm: 'Estas Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ingresar otro', new_animal_path %>
